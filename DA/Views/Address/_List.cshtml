@using DA.Domain.Dtos
@using DA.Domain.Entities
@using DA.Domain.Enums
@model List<AddressDto>

<table class="table dataTable table-striped table-hover">
    <thead>
        <tr>
            <th>Adres Başlığı</th>
            <th>Adres</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count != 0)
        {
            @foreach (AddressDto item in Model)
            {
                <tr id="@item.Id.ToString()">
                    <td>@item.AddressTitle</td>
                    <td>@item.FullAddress</td>
                    <td>
                        <a onclick="AjaxMethod('Addresses/OpenModal', '@item.Id.ToString()', 'Update')" href=""><i class="mdi mdi-table-edit text-success md20"></i></a>
                        <a onclick="AjaxMethod('Addresses/Delete', '@item.Id.ToString()', 'Delete')" href=""><i class="mdi mdi-delete text-danger md20"></i></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
