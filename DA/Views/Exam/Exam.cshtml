@using DA.Domain.Dtos
@{
    Layout = "_Layout";
}

@section scripts {
    <script>
        $('#NewExam').on('click', function () {
            $('#ModalExam').modal('show');
        });
    </script>
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Sınavlar</h4>
        <hr />
        <button id="NewExam" class="btn btn-primary mb-4">Yeni Sınav Ekle</button>
        <div class="table-responsive">
            @Html.Partial("_List")
        </div>
    </div>
</div>

