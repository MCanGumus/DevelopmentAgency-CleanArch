@using DA.Domain.Dtos
@model List<ExamDto>

<table class="table dataTable table-striped table-hover">
    <thead>
        <tr>
            <th>Sınav Adı</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count != 0)
        {
            @foreach (ExamDto item in Model)
            {
                <tr data-id="@item.Id.ToString()">
                    <td>@item.Name</td>
                    <td>
                        <a onclick="AjaxMethod('Exams/OpenModal', '@item.Id.ToString()', 'Update')" href=""><i class="mdi mdi-table-edit text-success md20"></i></a>
                        <a onclick="AjaxMethod('Exams/Delete', '@item.Id.ToString()', 'Delete')" href=""><i class="mdi mdi-delete text-danger md20"></i></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
