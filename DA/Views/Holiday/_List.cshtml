@using DA.Domain.Dtos
@model List<PublicHolidayDto>

<table class="table dataTable table-striped table-hover">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Milli Bayram Mı?</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count != 0)
        {
            @foreach (PublicHolidayDto item in Model)
            {
                <tr id="@item.Id.ToString()">
                    <td>@(item.IsNationalHoliday ? item.Date.ToString("dd MMMM ") : item.Date.ToString("dd MMMM yyyy dddd"))</td>
                    <td>@(item.IsNationalHoliday ? "Evet" : "Hayır")</td>
                    <td>
                        <a onclick="AjaxMethod('PublicHolidays/OpenModal', '@item.Id.ToString()', 'Update')" href=""><i class="mdi mdi-table-edit text-success md20"></i></a>
                        <a onclick="AjaxMethod('PublicHolidays/Delete', '@item.Id.ToString()', 'Delete')" href=""><i class="mdi mdi-delete text-danger md20"></i></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
