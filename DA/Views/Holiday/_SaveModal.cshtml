<!-- Ekle Modalı -->
<div class="container">
    <div class="modal fade" id="ModalPublicHoliday" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg modal-simple w-75">
            <div class="modal-content p0 border-0">
                <div class="modal-header bg-primary">
                    <h4 class="modal-title text-white">
                        <label id="Label_Baslik" class="font-weight-bold">Yeni Tatil Ekle</label>
                    </h4>
                    <button type="button" class="close" style="color: white;" data-dismiss="modal" aria-label="Close">x</button>
                </div>
                <div class="modal-body">
                    <form action="PublicHolidays/Save">
                        <input type="hidden" name="Id" />

                        <div class="row mb-2">
                            <label for="name" class="col-sm-2 col-form-label pt-0">Tarih</label>
                            <div class="col-lg-4 col-md-4 col-sm-5">
                                <input type="date" id="Date" name="Date" class="form-control" />
                            </div>
                            <label for="IsNationalHoliday" class="col-sm-3 col-form-label pt-0">Milli Bayram Mı?</label>
                            <div class="col-lg-3 col-md-3 col-sm-3">
                                <input id="IsNationalHoliday" type="checkbox" name="IsNationalHoliday" class="form-check-input" />
                            </div>
                        </div>
                        <hr />
                        <div class="row mb-2 fr">
                            <label class="col-sm-2 col-form-label pt-0">&nbsp;</label>
                            <div class="col-lg-10 col-md-10 col-sm-11">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

