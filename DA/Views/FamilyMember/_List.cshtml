@using DA.Controllers.Authority
@using DA.Domain.Dtos
@using DA.Domain.Dtos.Authority.FamilyMemberDtos
@using DA.Domain.Entities
@using DA.Domain.Enums

@model List<FamilyMemberDto>

<table class="table dataTable table-striped table-hover">
    <thead>
        <tr>
            <th>T.C. Kimlik Numarası</th>
            <th>İsim</th>
            <th>Yakınlık Derecesi</th>
            <th>Doğum Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count != 0)
        {
            @foreach (FamilyMemberDto item in Model)
            {
                <tr id="@item.Id.ToString()">
                    <td>@item.NationalIdentityNumber</td>
                    <td>@item.NameSurname</td>
                    <td>@item.RelationType</td>
                    <td>@item.DateOfBirth.ToString("dd.MM.yyyy")</td>
                    <td>
                        <a onclick="AjaxMethod('FamilyMember/OpenModal', '@item.Id.ToString()', 'Update')" href=""><i class="mdi mdi-table-edit text-success md20"></i></a>
                        <a onclick="AjaxMethod('FamilyMember/Delete', '@item.Id.ToString()', 'Delete')" href=""><i class="mdi mdi-delete text-danger md20"></i></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
