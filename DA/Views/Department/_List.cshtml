@using DA.Domain.Dtos
@using DA.Domain.Entities
@using DA.Models
@model DepartmentAndEmployees
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<table class="table dataTable table-striped table-hover">
    <thead>
        <tr>
            <th>
                Birim Adı
            </th>
            <th>
                As Başkan
            </th>
            <th>
                Yedek Başkan
            </th>
            <th class="text-center">
                İşlemler
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Departments.Count != 0)
        {
            EmployeeDto employee = null;

            @foreach (Department item in Model.Departments)
            {
                <tr id="@item.Id.ToString()">
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Employee.Name @item.Employee.Surname
                    </td>
                    <td>
                        @{
                            string nameOfBackupManager = "";

                            if (item.IdBackupManager == null)
                            {
                                nameOfBackupManager = "Yok";
                            }
                            else
                            {
                                employee = Model.Employees.Where(x => x.Id == item.IdBackupManager).FirstOrDefault();

                                if (employee == null)
                                {
                                    nameOfBackupManager = "Yok";
                                }
                                else
                                {
                                    nameOfBackupManager = employee.Name + " " + employee.Surname;
                                }
                            }
                        }
                        @nameOfBackupManager
                    </td>
                    <td>
                        <a onclick="AjaxMethod('Birimler/OpenModal', '@item.Id.ToString()', 'Update')" href=""><i class="mdi mdi-table-edit text-success md20"></i></a>
                        <a onclick="AjaxMethod('Birimler/Delete', '@item.Id.ToString()', 'Delete')" href=""><i class="mdi mdi-delete text-danger md20"></i></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>