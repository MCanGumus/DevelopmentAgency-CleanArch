@using DA.Domain.Dtos
@using DA.Domain.Entities
@using DA.Domain.Enums

@model List<VehicleDto>

<table class="table dataTable table-striped table-hover">
    <thead>
        <tr>
            <th>Plaka</th>
            <th>Kapasite</th>
            <th>Geçici Mi?</th>
            <th>Durumu</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count != 0)
        {
            @foreach (VehicleDto item in Model)
            {
                <tr id="@item.Id.ToString()">
                    <td>@item.Plate</td>
                    <td>@item.Capacity.ToString()</td>
                    <td>
                        @(item.IsTemporary ? "Geçici" : "Geçici Değil")
                    </td>
                    <td>
                        @(item.IsActive ? "Aktif" : "Aktif Değil")
                    </td>
                    <td>
                        <a onclick="AjaxMethod('Vehicle/OpenModal', '@item.Id.ToString()', 'Update')" href=""><i class="mdi mdi-table-edit text-success md20"></i></a>
                        <a onclick="AjaxMethod('Vehicle/Delete', '@item.Id.ToString()', 'Delete')" href=""><i class="mdi mdi-delete text-danger md20"></i></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
