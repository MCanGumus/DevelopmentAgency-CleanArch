@using DA.Domain.Dtos
@{
    Layout = "_Layout";
}

@section scripts {
    <script>
        $('#NewVehicleRequest').on('click', function () {
            $('#ModalVehicleRequest').modal('show');
            $('#IdDepartureVehicleFK').empty();
        });

        $('#GetDepartureCars').on('click', function () {
            var dateOfStart = $('#DepartureStartDate').val();
            var dateOfEnd = $('#DepartureEndDate').val();

            if (dateOfStart == null || dateOfStart == "") {
                ShowErrorMessage("Lütfen başlama bitiş tarihlerini giriniz.");
                return;
            }

            if (dateOfEnd == null || dateOfEnd == "") {
                ShowErrorMessage("Lütfen başlama bitiş tarihlerini giriniz.");
                return;
            }

            var startDate = new Date(dateOfStart);
            var endDate = new Date(dateOfEnd);

            if (endDate <= startDate) {
                ShowErrorMessage("Lütfen başlama bitiş tarihlerini doğru giriniz.");
                return;
            }

            $.ajax({
                type: "POST",
                url: "/" + "VehicleRequest/ChangeSelectItems",
                data: { startDate: dateOfStart, endDate: dateOfEnd },
                success: function (response) {
                    eval(response);
                }

            });
        });
    </script>
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Araç Taleplerim</h4>
        <hr />
        <button id="NewVehicleRequest" class="btn btn-primary mb-4">Yeni Araç Talebi Ekle</button>
        <div class="table-responsive">
            @Html.Partial("_List")
        </div>
    </div>
</div>

@Html.Partial("_SaveModalForMe")
