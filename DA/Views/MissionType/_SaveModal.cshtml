<!-- Ekle Modalı -->
<div class="container">
    <div class="modal fade" id="ModalMissionType" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg modal-simple w-75">
            <div class="modal-content p0 border-0">
                <div class="modal-header bg-primary">
                    <h4 class="modal-title text-white">
                        <label id="Label_Baslik" class="font-weight-bold">Yeni Görev Türü Ekle</label>
                    </h4>
                    <button type="button" class="close" style="color: white;" data-dismiss="modal" aria-label="Close">x</button>
                </div>
                <div class="modal-body">
                    <form action="MissionTypes/Save">
                        <input type="hidden" name="Id" />
                        <div class="row mb-2">
                            <label for="name" class="col-sm-2 col-form-label pt-0">Görev Türü Adı</label>
                            <div class="col-lg-10 col-md-10 col-sm-11">
                                <input id="TypeName" name="TypeName" class="form-control" maxlength="50" placeholder="Görev Türü Adı" />
                            </div>
                        </div>
                        <hr />
                        <div class="row mb-2 fr">
                            <label class="col-sm-2 col-form-label pt-0">&nbsp;</label>
                            <div class="col-lg-10 col-md-10 col-sm-11">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

