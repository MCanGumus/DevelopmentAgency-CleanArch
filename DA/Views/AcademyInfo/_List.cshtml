@using DA.Controllers.Authority
@using DA.Domain.Dtos
@using DA.Domain.Entities
@using DA.Domain.Enums

@model List<AcademyInfoDto>

<table class="table dataTable table-striped table-hover">
    <thead>
        <tr>
            <th>Üniversite</th>
            <th>Fakülte</th>
            <th>Bölüm</th>
            <th>Tür</th>
            <th>Tez Konusu</th>
            <th>Başlama - Bitiş</th>
            <th class="text-center">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count != 0)
        {
            @foreach (AcademyInfoDto item in Model)
            {
                <tr id="@item.Id.ToString()">
                    <td>@item.University</td>
                    <td>@item.Faculty</td>
                    <td>@item.Department</td>
                    <td>@(AcademyInfoController.StrAcademyType(item.AcademyType))</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ThesisTopic))
                        {
                            <span>@item.ThesisTopic</span>
                        }
                        else
                        {
                            <span>Tez Yok</span>
                        }
                        
                    </td>
                    <td>@item.StartDate - @item.EndDate</td>
                    <td>
                        <a onclick="AjaxMethod('AcademyInfo/OpenModal', '@item.Id.ToString()', 'Update')" href=""><i class="mdi mdi-table-edit text-success md20"></i></a>
                        <a onclick="AjaxMethod('AcademyInfo/Delete', '@item.Id.ToString()', 'Delete')" href=""><i class="mdi mdi-delete text-danger md20"></i></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
